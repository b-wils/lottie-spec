{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "required": ["ty"],
    "allOf": [
        {
            "if": {
                "type": "object",
                "properties": {
                    "ty": {"const": 0}
                }
            },
            "then": {
                "$ref": "#/$defs/layers/precomposition-layer"
            }
        },
        {
            "if": {
                "type": "object",
                "properties": {
                    "ty": {"const": 2}
                }
            },
            "then": {
                "$ref": "#/$defs/layers/image-layer"
            }
        },
        {
            "if": {
                "type": "object",
                "properties": {
                    "ty": {"const": 3}
                }
            },
            "then": {
                "$ref": "#/$defs/layers/null-layer"
            }
        },
        {
            "if": {
                "type": "object",
                "properties": {
                    "ty": {"const": 1}
                }
            },
            "then": {
                "$ref": "#/$defs/layers/solid-layer"
            }
        },
        {
            "if": {
                "type": "object",
                "properties": {
                    "ty": {"const": 4}
                }
            },
            "then": {
                "$ref": "#/$defs/layers/shape-layer"
            }
        }
    ]
}
